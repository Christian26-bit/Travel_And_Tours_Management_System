<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="0" styleClass="summary-panel" 
      stylesheets="@../../../Styles/User/BookingWizard.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.cht.travelmanagement.Controllers.User.BookingWizard.BookingSummaryController">
   <children>
      <!-- Header Section -->
      <VBox alignment="CENTER" spacing="8" styleClass="summary-header">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="25.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="10">
               <FontAwesomeIconView glyphName="SHOPPING_CART" size="20" styleClass="summary-header-icon" />
               <Label styleClass="summary-title" text="Booking Summary" />
            </HBox>
            <HBox alignment="CENTER" spacing="8">
               <Circle radius="6" styleClass="completion-dot" />
               <Label fx:id="complete_percent_lbl" styleClass="completion-label" text="0% Complete" />
            </HBox>
         </children>
      </VBox>
      
      <!-- Summary Items Section -->
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="summary-scroll" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="0" styleClass="summary-items-container">
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <children>
                  <!-- Customer Section -->
                  <VBox styleClass="summary-item">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <StackPane styleClass="summary-icon-container">
                              <FontAwesomeIconView glyphName="USER" size="14" styleClass="summary-icon" />
                           </StackPane>
                           <VBox spacing="2" HBox.hgrow="ALWAYS">
                              <Label styleClass="summary-item-title" text="Customer" />
                              <Label fx:id="customer_lbl" styleClass="summary-item-value" text="Not set" wrapText="true" />
                           </VBox>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Package Section -->
                  <VBox styleClass="summary-item">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <StackPane styleClass="summary-icon-container">
                              <FontAwesomeIconView glyphName="SUITCASE" size="14" styleClass="summary-icon" />
                           </StackPane>
                           <VBox spacing="2" HBox.hgrow="ALWAYS">
                              <Label styleClass="summary-item-title" text="Package" />
                              <Label fx:id="package_lbl" styleClass="summary-item-value" text="Not selected" wrapText="true" />
                           </VBox>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Hotel Section -->
                  <VBox styleClass="summary-item">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <StackPane styleClass="summary-icon-container">
                              <FontAwesomeIconView glyphName="BUILDING" size="14" styleClass="summary-icon" />
                           </StackPane>
                           <VBox spacing="2" HBox.hgrow="ALWAYS">
                              <Label styleClass="summary-item-title" text="Hotel" />
                              <Label fx:id="hotel_lbl" styleClass="summary-item-value" text="Not selected" wrapText="true" />
                           </VBox>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Transport Section -->
                  <VBox styleClass="summary-item">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <StackPane styleClass="summary-icon-container">
                              <FontAwesomeIconView glyphName="CAR" size="14" styleClass="summary-icon" />
                           </StackPane>
                           <VBox spacing="2" HBox.hgrow="ALWAYS">
                              <Label styleClass="summary-item-title" text="Transport" />
                              <Label fx:id="transport_lbl" styleClass="summary-item-value" text="Not selected" wrapText="true" />
                           </VBox>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- Total Cost Section -->
      <VBox alignment="CENTER" spacing="8" styleClass="summary-total-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <!-- Progress Ring -->
            <StackPane>
               <Circle radius="35" styleClass="progress-ring-bg" />
               <Circle fx:id="progress_ring" radius="35" styleClass="progress-ring" />
               <VBox alignment="CENTER" spacing="0">
                  <Label fx:id="completion_count_lbl" styleClass="progress-ring-text" text="0/5" />
               </VBox>
            </StackPane>
            
            <Separator styleClass="summary-separator" />
            
            <VBox alignment="CENTER" spacing="4">
               <Label styleClass="total-label" text="Estimated Total" />
               <Label fx:id="total_cost_lbl" styleClass="total-amount" text="â‚±0.00" />
               <Label fx:id="cost_hint_txt" styleClass="total-hint" text="Add items to see total" />
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
