<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane stylesheets="@../../../Styles/User/BookingWizard.css" style="-fx-background-color: #F4F7FE;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cht.travelmanagement.Controllers.User.BookingWizard.BookingStep4Controller">
   <children>
      <VBox spacing="20" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="25.0" />
         </padding>
         <children>
            <!-- Header -->
            <VBox spacing="8">
               <children>
                  <Label styleClass="header-title" text="Select Your Hotel" />
                  <Label styleClass="header-subtitle" text="Choose accommodation that suits your needs and budget" />
               </children>
            </VBox>
            
            <!-- Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #F8FAFF; -fx-background-radius: 12; -fx-padding: 15 20;">
               <children>
                  <FontAwesomeIconView glyphName="FILTER" size="14" style="-fx-fill: #4318FF;" />
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2B3674;" text="Filter by Rating:" />
                  <HBox spacing="20">
                     <children>
                        <RadioButton fx:id="all_hotel_radio" mnemonicParsing="false" selected="true" styleClass="radio-button" text="All">
                           <toggleGroup>
                              <ToggleGroup fx:id="hotel_rating_group" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="three_star_radio" mnemonicParsing="false" styleClass="radio-button" text="⭐⭐⭐ 3 Star" toggleGroup="$hotel_rating_group" />
                        <RadioButton fx:id="four_star_radio" mnemonicParsing="false" styleClass="radio-button" text="⭐⭐⭐⭐ 4 Star" toggleGroup="$hotel_rating_group" />
                        <RadioButton fx:id="five_star_radio" mnemonicParsing="false" styleClass="radio-button" text="⭐⭐⭐⭐⭐ 5 Star" toggleGroup="$hotel_rating_group" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Hotels List -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="hotel_container" spacing="15">
                     <padding>
                        <Insets bottom="10.0" right="10.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>