                                 <Label styleClass="stat-growth-text" text="+5%" />
                              </VBox>
                           </children>
                        </HBox>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="stat-title" text="UPCOMING TRIPS" />
                        <Label fx:id="upcomingTrips_lbl" styleClass="stat-value" text="248" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="stat-subtext" text="Scheduled" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="TOP_LEFT" spacing="15">
                           <children>
                              <StackPane styleClass="stat-icon-container">
                                 <children>
                                    <FontAwesomeIconView glyphName="CHECK" size="1.8em" styleClass="stat-icon" />
                                 </children>
                              </StackPane>
                              <VBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                                 <Label styleClass="stat-growth-text" text="+5%" />
                              </VBox>
                           </children>
                        </HBox>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="stat-title" text="COMPLETED TRIPS" />
                        <Label fx:id="completedTrips_lbl" styleClass="stat-value" text="248" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="stat-subtext" text="Finished" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="0.0" right="0.0" />
               </VBox.margin>
