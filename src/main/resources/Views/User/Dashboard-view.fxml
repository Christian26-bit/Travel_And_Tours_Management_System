                     </children>
                  </VBox>
                  <Button fx:id="newBooking_btn" mnemonicParsing="false" styleClass="primary-button" text="Create New Booking">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" />
                     </graphic>
                  </Button>
               </children>
            </HBox>

            <!-- Statistics Cards -->
            <HBox spacing="20">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="TOP_LEFT" spacing="15">
                           <children>
                              <StackPane styleClass="stat-icon-container">
                                 <children>
                                    <FontAwesomeIconView glyphName="USERS" size="1.8em" styleClass="stat-icon" />
                                 </children>
                              </StackPane>
                              <VBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                                 <Label styleClass="stat-growth-text" text="+5%" />
