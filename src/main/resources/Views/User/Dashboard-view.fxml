            <!-- Recent Trips Section -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="section-title" text="Recent Bookings" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="header-subtitle" text="Latest activities from your agency" wrappingWidth="397.5546875" />
                     </children>
                  </VBox>
                  <Button fx:id="viewAll_btn" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" styleClass="secondary-button" text="View All">
                     <graphic>
                        <FontAwesomeIconView glyphName="ARROW_RIGHT" />
                     </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TableView fx:id="booking_table" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="bookingId_col" prefWidth="75.0" text="Booking ID" />
                  <TableColumn fx:id="client_col" prefWidth="75.0" text="Client" />
                  <TableColumn fx:id="destination_col" prefWidth="75.0" text="Destination" />
